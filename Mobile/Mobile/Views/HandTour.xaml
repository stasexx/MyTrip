<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Views.HandTour"
             BackgroundColor="#EEE"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <ScrollView>
            <StackLayout>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="240"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Image Source="{Binding HandTour.tour.mainPhoto}" Aspect="AspectFill" HeightRequest="240" VerticalOptions="Start" Grid.Row="0" />
                    <Frame Padding="0" HeightRequest="40" WidthRequest="40"  Grid.Row="0" HorizontalOptions="Start" VerticalOptions="Start" Margin="15" CornerRadius="40" BackgroundColor="Black" Opacity="0.4">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavToMainCommand}"></TapGestureRecognizer>
                        </Frame.GestureRecognizers>
                        <Image Grid.Row="0" Source="WhiteLeftArrow.png" HorizontalOptions="Center" Margin="8, 0, 0, 0" VerticalOptions="Center" Scale="1.3"></Image>
                    </Frame>

                    <Frame Padding="0, 0, 0, 0" Margin="0, 15, 15, 0" HeightRequest="40" WidthRequest="40"  Grid.Row="0" HorizontalOptions="End" VerticalOptions="Start"  CornerRadius="40" BackgroundColor="Black" Opacity="0.4">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShareCommand}"></TapGestureRecognizer>
                        </Frame.GestureRecognizers>
                        <Image Grid.Row="0" Source="Share.png" HorizontalOptions="Center" Margin="4, 0, 0, 0" VerticalOptions="Center" Scale="1.3"></Image>
                    </Frame>
                </Grid>

                <Frame CornerRadius="10" BackgroundColor="White" WidthRequest="320" HorizontalOptions="Center" VerticalOptions="End" Padding="10" Margin="0,-40,0,0" Grid.Row="0">


                    <StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Not Specified" FontSize="20" FontAttributes="Bold" TextColor="Black"  FontFamily="Trebuchet MS"/>
                        </StackLayout>

                        <Label Text="{Binding HandTour.tour.name}" FontAttributes="Bold" FontSize="20" TextColor="Black" Margin="0,0,0,0" FontFamily="Trebuchet MS"/>

                        <Label Text="{Binding HandTour.tour.destination}" FontSize="14" TextColor="#666666" Margin="0,0,0,0" FontFamily="Trebuchet MS"/>

                        <Image Source="{Binding handTour.tour.rateImage}" HorizontalOptions="Start"></Image>

                        <Button Text="Join"  FontSize="18"  TextColor="White" BackgroundColor="#F5B129" HorizontalOptions="Center" WidthRequest="3600" Margin="0,10,0,40" FontFamily="Trebuchet MS"/>


                        <StackLayout>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Text="Handmade" FontSize="14" HorizontalOptions="Center"  VerticalOptions="Center" Grid.Column="0"></Label>
                                <Label Text="{Binding HandTour.tour.countOfUser}" Grid.Column="0" HorizontalOptions="End" FontSize="14" Margin="0, 0, 10, 0"></Label>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />

                                </Grid.ColumnDefinitions>

                                <Label Text="Start:"  FontSize="18" TextColor="Black"   FontFamily="Trebuchet MS"/>
                                <Label Text="{Binding HandTour.tour.startDateNoTime}" FontSize="18" TextColor="Black" Grid.Column="1" FontFamily="Trebuchet MS"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="End:" FontSize="18" TextColor="Black"  FontFamily="Trebuchet MS"/>

                                <Label Text="{Binding HandTour.tour.EndDateNoTime}" FontSize="18" TextColor="Black" Grid.Column="1" FontFamily="Trebuchet MS"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="Type:" FontSize="18" TextColor="Black"  FontFamily="Trebuchet MS"/>

                                <Label Text="{Binding HandTour.tour.category}"  FontSize="18" TextColor="Black" Grid.Column="1" FontFamily="Trebuchet MS"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="Departure:" FontSize="18" TextColor="Black"  FontFamily="Trebuchet MS"/>

                                <Label Text="{Binding HandTour.tour.placeOfDeparture}" FontSize="18" TextColor="Black" Grid.Column="1" FontFamily="Trebuchet MS"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="Contact: " FontSize="18" TextColor="Black"  FontFamily="Trebuchet MS"/>

                                <Label Text="{Binding HandTour.user.PhoneNumber}" FontSize="18" TextColor="Black" Grid.Column="1"  FontFamily="Trebuchet MS"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="Email:" FontSize="18" TextColor="Black"  FontFamily="Trebuchet MS"/>

                                <Label Text="{Binding HandTour.user.Email}" FontSize="18" TextColor="Black" Grid.Column="1"  FontFamily="Trebuchet MS"/>
                            </Grid>


                        </StackLayout>



                        <StackLayout>
                            <Grid VerticalOptions="CenterAndExpand" Margin="0,30,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"></RowDefinition>
                                    <RowDefinition Height="1"></RowDefinition>
                                    <RowDefinition Height="30"></RowDefinition>
                                    <RowDefinition Height="1"></RowDefinition>
                                    <RowDefinition Height="30"></RowDefinition>
                                    <RowDefinition Height="1"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Frame Padding="0" Grid.Row="0" BackgroundColor="#FFFFFF" HasShadow="False">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding NavToMapCommand}"></TapGestureRecognizer>
                                    </Frame.GestureRecognizers>
                                    <StackLayout>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Image Grid.Column="0" Source="MapIcon.png" Scale="0.7" HorizontalOptions="Center" VerticalOptions="Center"></Image>
                                            <Label Grid.Column="1" Text="View in Maps" FontFamily="Bold" FontSize="16" Margin="0, 3, 0, 0" TextColor="Black" ></Label>
                                            <Image Grid.Column="2" Source="RightArrow.png" HorizontalOptions="End" Margin="0, 0, 20, 0" ></Image>
                                        </Grid>
                                    </StackLayout>
                                </Frame>
                                <BoxView Grid.Row="1" Color="#B3B3B3" Margin="-30, 0, 0 ,0"></BoxView>

                                <Frame Padding="0" Grid.Row="2" BackgroundColor="#FFFFFF" HasShadow="False">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding NavToDetailCommand}"></TapGestureRecognizer>
                                    </Frame.GestureRecognizers>
                                    <StackLayout>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Image Grid.Column="0" Source="DisIcon.png" Scale="0.7" HorizontalOptions="Center" VerticalOptions="Center"></Image>
                                            <Label Grid.Column="1" Text="Details" FontFamily="Bold" FontSize="16" Margin="0, 3, 0, 0" TextColor="Black" ></Label>
                                            <Image Grid.Column="2" Source="RightArrow.png" HorizontalOptions="End" Margin="0, 0, 20, 0" ></Image>
                                        </Grid>
                                    </StackLayout>
                                </Frame>
                                <BoxView Grid.Row="3" Color="#B3B3B3" Margin="-30, 0, 0 ,0"></BoxView>

                                <Frame Padding="0" Grid.Row="4" BackgroundColor="#FFFFFF" HasShadow="False">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding NavToReviewsCommand}"></TapGestureRecognizer>
                                    </Frame.GestureRecognizers>
                                    <StackLayout>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Image Grid.Column="0" Source="RewIcon.png" Scale="0.7" HorizontalOptions="Center" VerticalOptions="Center"></Image>
                                            <Label Grid.Column="1" Text="Reviews" FontFamily="Bold" FontSize="16" Margin="0, 3, 0, 0" TextColor="Black" ></Label>
                                            <Image Grid.Column="2" Source="RightArrow.png" HorizontalOptions="End" Margin="0, 0, 20, 0" ></Image>
                                        </Grid>
                                    </StackLayout>
                                </Frame>
                                <BoxView Grid.Row="5" Color="#B3B3B3" Margin="-30, 0, 0 ,0"></BoxView>
                            </Grid>
                        </StackLayout>

                    </StackLayout>

                </Frame>
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>